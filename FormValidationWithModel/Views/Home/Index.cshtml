@model FormValidationWithModel.Models.Student
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        
            @using (Html.BeginForm("SubmitData", "Home"))
            {
                //except string we have to use Editor
                <label>Roll</label>@Html.Editor("Roll") <br />
                @Html.ValidationMessage("Roll")
                <br />

                <label>Name</label>@Html.TextBox("Name") <br />
                @Html.ValidationMessage("Name")
                <br />

                <label>Password</label>@Html.Editor("Password") <br />
                @Html.ValidationMessage("Password")
                <br />

                <label>Repassword</label>@Html.Editor("RePassword") <br />
                @Html.ValidationMessage("RePassword")
                <br />

                <label>Age</label>@Html.Editor("Age") <br />
                @Html.ValidationMessage("Age")
                <br />

                <label>Phone</label>@Html.TextBox("Phone") <br />
                @Html.ValidationMessage("Phone")
                <br />

                <label>Address</label>@Html.TextBox("Address") <br />
                @Html.ValidationMessage("Address")
                <br />

                <input type="submit" value="submit" />
            }
        
    </div>
    
    </body>
</html>
